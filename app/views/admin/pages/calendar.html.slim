.col-md-10
  #calendar
.col-md2
  h4 Adicionar Evento
  = form_for [:admin,@appointment], remote: true do |f|
    .form-group
      = f.label :title
      = f.text_field :title

    .form-group
      .col-md-2 style="padding-left: 0px;"
        = f.label 'Funcionário'
        = f.collection_select :employee_id, Employee.all , :id,:name, {prompt: "Selecione o funcionario"}, class: 'form-control', required: true


    .form-group
      .col-md-2 style="padding-left: 0px;"
        = f.label 'Cliente'
        = f.collection_select :client_id, Client.all , :id,:name, {prompt: "Selecione o cliente"}, class: 'form-control', required: true

    .form-group
      .col-md-2 style="padding-left: 0px;"
        = f.label 'Serviço'
        = f.collection_select :service_id, Service.all , :id,:name, {prompt: "Selecione o serviço"}, class: 'form-control', required: true

    .form-group
      p Inicio
      = f.text_field :start_date, class: 'form-group date-picker'

    .form-group
      .input-group.bootstrap-timepicker
        = f.text_field :appointment_time, class: 'form-control input-small timepicker', readonly: true
        span.input-group-addon.btn-theme04
          i.fa.fa-clock-o.fa-lg

    .form-group
      = f.submit 'Registrar'
