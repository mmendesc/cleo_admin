html
  head
    meta content=("text/html; charset=UTF-8") http-equiv="Content-Type" /
    title CleoAdmin
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    script src="https://use.fontawesome.com/ecb2c4079a.js"
  body
    section#container
      /!
        | **********************************************************************************************************************************************************
        | TOP BAR CONTENT &amp; NOTIFICATIONS
        | ***********************************************************************************************************************************************************
      /! header start
      header.header.black-bg
        .sidebar-toggle-box
          .fa.fa-bars.tooltips data-original-title=("Toggle Navigation") data-placement="right"
        /! logo start
        a.logo href="index.html"
          b Cleo Admin
        /! logo end
        #top_menu.nav.notify-row
          /! notification start
          ul.nav.top-menu
            /! settings start
            li.dropdown
              a.dropdown-toggle data-toggle="dropdown"
                i.fa.fa-tasks
                span.badge.bg-theme 4
              ul.dropdown-menu.extended.tasks-bar
                .notify-arrow.notify-arrow-green
                li
                  p.green You have 4 pending tasks
                li
                  a href="index.html#"
                  .task-info
                    .desc DashGum Admin Panel
                    .percent 40%
                  .progress.progress-striped
                    .progress-bar.progress-bar-success aria-valuemax="100" aria-valuemin="0" aria-valuenow="40" role="progressbar" style=("width: 40%")
                      span.sr-only 40% Complete (success)
                li
                  a href="index.html#"
                  .task-info
                    .desc Database Update
                    .percent 60%
                  .progress.progress-striped
                    .progress-bar.progress-bar-warning aria-valuemax="100" aria-valuemin="0" aria-valuenow="60" role="progressbar" style=("width: 60%")
                      span.sr-only 60% Complete (warning)
                li
                  a href="index.html#"
                  .task-info
                    .desc Product Development
                    .percent 80%
                  .progress.progress-striped
                    .progress-bar.progress-bar-info aria-valuemax="100" aria-valuemin="0" aria-valuenow="80" role="progressbar" style=("width: 80%")
                      span.sr-only 80% Complete
                li
                  a href="index.html#"
                  .task-info
                    .desc Payments Sent
                    .percent 70%
                  .progress.progress-striped
                    .progress-bar.progress-bar-danger aria-valuemax="100" aria-valuemin="0" aria-valuenow="70" role="progressbar" style=("width: 70%")
                      span.sr-only 70% Complete (Important)
                li.external
                  a href="#"  See All Tasks
            /! settings end
            /! inbox dropdown start
        .top-menu
          ul.nav.pull-right.top-menu
            li
              a.logout href="login.html"  Logout
      /! header end
      /!
        | **********************************************************************************************************************************************************
        | MAIN SIDEBAR MENU
        | ***********************************************************************************************************************************************************
      /! sidebar start
      aside
        #sidebar.nav-collapse
          /! sidebar menu start
          ul#nav-accordion.sidebar-menu
            p.centered
              a href="profile.html"
                img.img-circle src="" width="60" /
            h5.centered Marcel Newman
            li.mt
              a href="index.html"
                i.fa.fa-dashboard
                span Agenda
            li.sub-menu
              a href="/clients"
                i.fa.fa-desktop
                span Clientes

            li.sub-menu
              a href="javascript:;"
                i.fa.fa-cogs
                span Funcionários
              ul.sub
                li
                  a href="calendar.html"  Calendar
                li
                  a href="gallery.html"  Gallery
                li
                  a href="todo_list.html"  Todo List
            li.sub-menu
              a href="/products"
                i.fa.fa-book
                span Produtos

            li.sub-menu
              a href="javascript:;"
                i.fa.fa-tasks
                span Serviços
              ul.sub
                li
                  a href="form_component.html"  Form Components
            li.sub-menu
              a href="/clients"
                i.fa.fa-th
                span Vender Produtos

            li.sub-menu
              a href="javascript:;"
                i.fa.fa-bar-chart-o
                span Relatórios
              ul.sub
                li
                  a href="morris.html"  Morris
                li
                  a href="chartjs.html"  Chartjs
          /! sidebar menu end
      /! sidebar end
      /!
        | **********************************************************************************************************************************************************
        | MAIN CONTENT
        | ***********************************************************************************************************************************************************
      /! main content start
      section#main-content
        section.wrapper.site-min-height
          h3
            i.fa.fa-angle-right
            | #{@page}
          .row.mt
            .col-lg-12
              = yield

      /! /MAIN CONTENT
      /! main content end
      /! footer start
      footer.site-footer
        .text-center
          | 2014 - Alvarez.is
          a.go-top href="blank.html#"
            i.fa.fa-angle-up
      /! footer end


